<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mypage_charIv"
            android:layout_width="140dp"
            android:layout_height="230dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/people" />
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="LV "
                android:textSize="15dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Point"
                android:textSize="15dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Stage"
                android:textSize="15dp" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Attack"
                android:textSize="15dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Defend"
                android:textSize="15dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Skill"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/mypage_levelTv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/maplestorybold"
                    android:textAlignment="center"
                    android:text="3 "
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/mypage_pointTv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/maplestorybold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="10000"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/mypage_stageTv"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/maplestorybold"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="17"
                    android:textSize="15dp" />


            <TextView
                android:id="@+id/mypage_atkTv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="20"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/mypage_dfdTv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="10"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mypage_skillTv"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:fontFamily="@font/maplestorybold"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text="Time+0.5"
                android:textSize="15dp" />


        </LinearLayout>
        <ImageButton
            android:id="@+id/mypage_closeBtn"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/ic_baseline_close_24"
            />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"

        android:background="#FAEEFB">


        <TextView
            android:id="@+id/mypage_achievementTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/maplestorybold"
            android:text="달성도"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/mypage_achievementPb"
            app:layout_constraintHorizontal_bias="0.663"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.514" />

        <TextView
            android:id="@+id/mypage_answerrateTv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/maplestorybold"
            android:text="정답률"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/mypage_answerratePb"
            app:layout_constraintHorizontal_bias="0.663"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.583" />

        <ProgressBar
            android:id="@+id/mypage_achievementPb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.513" />

        <ProgressBar
            android:id="@+id/mypage_answerratePb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.662"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.583" />

        <GridView
            android:id="@+id/mypage_gridview"
            android:layout_width="372dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:background="#E3D7D7"
            android:numColumns="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="424dp"
            android:layout_height="80dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.354">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#F4E5E5"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/medal1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonshapecircle"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_star_24"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/medal2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonshapecircle"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_local_fire_department_24"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/medal3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonshapecircle"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_heart_24"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/medal4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonshapecircle"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_toys_24"
                    android:visibility="visible" />

                <ImageButton
                    android:id="@+id/medal5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttonshapecircle"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_music_note_24"
                    android:visibility="visible" />


            </LinearLayout>

        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>