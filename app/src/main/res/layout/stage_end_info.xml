<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="@drawable/stageinfo_teme"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/resultTv_onBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISH!"
        android:textColor="#000000"
        android:textSize="40dp"
        android:padding="20dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A6EFF"
        android:gravity="center"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rankRb_onBattle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="3"
            android:rating="0"
            android:isIndicator="true"
            android:theme="@style/RatingBar"/>

        <TextView
            android:id="@+id/rateTv_onBattle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답률 :"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="45dp">

        <Button
            android:id="@+id/retryBtn_onBattle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="RETRY"
            android:padding="10dp"/>

        <Button
            android:id="@+id/endBtn_onBattle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="END"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>